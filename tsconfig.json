  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "types": ["vitest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
